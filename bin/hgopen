#!/usr/bin/env node

var xopen = require('../lib/xopen');
var getConfig = require('./xopen');
var hgremote = require('../lib/hgremote');
var gitresolve = require('../lib/');

var uri = hgremote.getRemoteUrl({cwd:process.cwd()});
var options = getConfig(uri, process.argv);
var url = gitresolve(uri, options);
xopen(url, options);

// vim:ft=javascript
